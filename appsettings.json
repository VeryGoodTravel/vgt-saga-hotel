{
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "MinimumLevel": {
      "Default": "Trace",
      "Override": {
        "Microsoft": "Fatal",
        "Microsoft.EntityFrameworkCore": "Fatal",
        "Microsoft.EntityFrameworkCore.Database": "Fatal",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal"
      }
    },
    "time": {
      "type": "FastLocal"
    },
    "targetDefaultWrapper": {
      "type": "AsyncWrapper"
    },
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Trace",
            "foregroundColor": "DarkGray"
          },
          {
            "condition": "level == LogLevel.Debug",
            "foregroundColor": "Gray"
          },
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "Green"
          },
          {
            "condition": "level == LogLevel.Warn",
            "foregroundColor": "Yellow"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      },
      "allfile": {
        "type": "File",
        "filename": ".\\${date:format=yyyy}\\${date:format=MM}\\${date:format=dd}\\log_${logger}_${shortdate}.log",
        "layout": "${longdate}|${uppercase:${level}}|${logger}| ${message} ${exception:format=tostring}",
        "archiveFileName": ".\\${date:format=yyyy}\\${date:format=MM}\\${date:format=dd}\\log{##}_${logger}_${shortdate}.log",
        "archiveNumbering": "Rolling",
        "archiveAboveSize": "1250000",
        "QueueLimit": 10
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "allfile, console"
      }
    ]
  }
}